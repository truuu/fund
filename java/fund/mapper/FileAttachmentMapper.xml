<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
             "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fund.mapper.FileAttachmentMapper">

  
    <select id="selectBySponosrId" resultType="fund.dto.FileAttachment">
        SELECT *
        FROM   fileAttachment
        WHERE  sponsorID = #{sponsorID}
    </select>
    
    <select id="selectById" resultType="fund.dto.FileAttachment">
        SELECT *
        FROM   fileAttachment
        WHERE  ID = #{ID}
    </select>


    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO fileAttachment(sponsorID,fileName,fileSize,createDate,data)
        VALUES (#{sponsorID}, #{fileName}, #{filesize},GETDATE(), #{data})
    </insert>

    <delete id="deleteById">
        DELETE fileAttachment WHERE id = #{id}
    </delete>

    

</mapper>