<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
             "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fund.mapper.FileAttachMapper">

    <select id="selectBySponsorId" resultType="fund.dto.FileAttach">
        SELECT id, sponsorId, fileName, fileSize, createDate
        FROM   fileAttachment
        WHERE  sponsorId = #{sponsorId}
    </select>

    <select id="selectById" resultType="fund.dto.FileAttach">
        SELECT * FROM fileAttachment WHERE  id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO fileAttachment (sponsorId, fileName, fileSize, createDate, data)
        VALUES (#{sponsorId},  #{fileName}, #{fileSize}, GETDATE(), #{data})
    </insert>

    <delete id="delete">
        DELETE FROM fileAttachment WHERE id = #{id}
    </delete>

    <delete id="deleteBysponsorId">
        DELETE FROM fileAttachment WHERE sponsorId = #{sponsorId}
    </delete>

</mapper>
